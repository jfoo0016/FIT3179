{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "COVID-19 Deaths (as of 14 May 2022)",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179/main/week9/js/ne_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179/main/week9/data/week9_lab_covid_data.csv"
            },
            "key": "country",
            "fields": ["total_deaths_per_1m_population"]
          }
        },
        {
          "calculate": "datum.total_deaths_per_1m_population",
          "as": "total_deaths_per_1m_population"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "total_deaths_per_1m_population",
          "type": "quantitative",
          "scale": {"type": "log"},
          "title": "total deaths / 1 million population"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "total_deaths_per_1m_population",
            "type": "quantitative",
            "title": "total deaths per 1 million population"
          }
        ]
      }
    }
  ],
  "config": {}
}