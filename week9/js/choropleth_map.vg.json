{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 400,
  "title": {"text": "COVID-19 Deaths (as of 14 May 2022)", "frame": "group"},
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179/main/week9/data/week9_lab_covid_data.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179/main/week9/js/ne_110m.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "country",
          "fields": ["properties.NAME"],
          "values": ["total_deaths_per_1m_population"]
        },
        {
          "type": "formula",
          "expr": "datum.total_deaths_per_1m_population + 0.1",
          "as": "Total Deaths/1 mil. population"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Total Deaths/1 mil. population\"]) && isFinite(+datum[\"Total Deaths/1 mil. population\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {
            "scale": "color",
            "field": "Total Deaths/1 mil\\. population"
          },
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"total_deaths_per_1m_population\": format(datum[\"total_deaths_per_1m_population\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Total Deaths/1 mil. population: \" + (format(datum[\"Total Deaths/1 mil. population\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; total_deaths_per_1m_population: \" + (format(datum[\"total_deaths_per_1m_population\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "log",
      "domain": {
        "data": "source_0",
        "field": "Total Deaths/1 mil\\. population"
      },
      "range": "heatmap",
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "labelOverlap": "greedy",
      "title": "Total Deaths/1 mil. population"
    }
  ],
  "config": {}
}